---
// Replace with your actual timeline events
const timelineEvents = [
  {
    date: "First Date",
    title: "Where It All Began",
    description: "Our first meeting was magical. We talked for hours about our shared interests.",
    icon: "❤️"
  },
  {
    date: "First Trip",
    title: "Adventure Together",
    description: "Remember that spontaneous weekend getaway? It was the first of many adventures.",
    icon: "✈️"
  },
  {
    date: "Moving In",
    title: "Creating Our Home",
    description: "The day we decided to share our lives completely. Our little sanctuary together.",
    icon: "🏠"
  },
  {
    date: "Today",
    title: "Our Anniversary",
    description: "Another milestone in our journey. Looking forward to many more years together.",
    icon: "🎉"
  }
];
---

<section id="story" class="py-20 relative">
  <!-- Chemistry-inspired background element -->
  <div class="absolute top-0 left-0 w-full h-20 wine-accent"></div>
  
  <div class="container mx-auto px-4">
    <div class="text-center mb-16" data-aos="fade-up">
      <h2 class="text-3xl md:text-4xl font-serif mb-4 chemistry-border inline-block">Our Story</h2>
      <p class="max-w-2xl mx-auto text-gray-300">A journey of love, laughter, and countless memories together.</p>
    </div>
    
    <div class="max-w-4xl mx-auto">
      <!-- Timeline -->
      <div class="relative">
        <!-- Vertical line -->
        <div class="absolute left-1/2 transform -translate-x-1/2 h-full w-px bg-gradient-to-b from-wine-700 via-wine-500 to-wine-700"></div>
        
        {timelineEvents.map((event, index) => (
          <div class={`flex flex-col md:flex-row items-center mb-16 last:mb-0 ${index % 2 === 0 ? '' : 'md:flex-row-reverse'}`} data-aos={index % 2 === 0 ? "fade-right" : "fade-left"} data-aos-delay={100 * index}>
            <!-- Date bubble -->
            <div class="z-10 mb-4 md:mb-0">
              <div class="bg-dark-800 border-2 border-wine-600 rounded-full w-16 h-16 flex items-center justify-center text-xl">
                {event.icon}
              </div>
            </div>
            
            <!-- Content -->
            <div class={`md:w-5/12 ${index % 2 === 0 ? 'md:pr-10 text-right' : 'md:pl-10 text-left'}`}>
              <div class="bg-dark-800/80 backdrop-blur-sm p-6 rounded-lg border border-wine-900/30 hover:border-wine-500/50 transition-all shadow-lg hover:shadow-wine-900/20">
                <span class="text-sm font-medium uppercase tracking-wide text-wine-400 block mb-1">{event.date}</span>
                <h3 class="text-xl font-serif mb-2 text-white">{event.title}</h3>
                <p class="text-gray-300">{event.description}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>